generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Ubicacion {
  id        Int       @id @default(autoincrement())
  nombre    String
  direccion String
  lat       Float
  lng       Float
  turnos    Turno[]
  createdAt DateTime  @default(now())
}

model Turno {
  id          Int       @id @default(autoincrement())
  fecha       DateTime
  paciente    String
  ubicacionId Int
  ubicacion   Ubicacion @relation(fields: [ubicacionId], references: [id])
  createdAt   DateTime  @default(now())
}
